{
    "compilerOptions": {
        // Emit
        "importHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "outDir": "./build",
        "target": "ES2017",
        
        // Type Checking
        "noImplicitAny": false,
        
        // Language and Environment
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        // Modules
        "module": "ES2015",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}